@model SmallMealPlan.Web.Model.Home.PlannerViewModel

<p>
    Add meal for @Model.Date.ToString("dddd dd MMMM yyyy")
</p>
<div class="smp-planner-add-header">
    <span class="selected" data-select=".smp-planner-add-recent">Saved meal-box</span>
    <span data-select=".smp-planner-add-new">Add to your meal-box</span>
</div>
<div class="smp-planner-add-recent">
    Sort by <a href="#">name</a> | <a href="#">recently used</a>
    <ul class="smp-planner-list-meal">
        <li class="smp-planner-list-meal">
            <div></div>
            <div><img src="/images/expand.png" class="smp-planner-list-meal-oc" height="18" width="18" /></div>
            <div>
                <div><a href="#">Pasta bake</a></div>
                <div class="smp-planner-list-meal-details">
                    <div>Ingredients:</div>
                    <ul>
                        <li>Pasta bake sauce</li>
                        <li>90g Pasta</li>
                    </ul>
                    <div>Notes:</div>
                    <div>Easy does it</div>
                </div>
            </div>
        </li>
        <li class="smp-planner-list-meal">
            <div></div>
            <div></div>
            <div>
                <div><a href="#">Pizza</a></div>
                <div class="smp-planner-list-meal-details">
                </div>
            </div>
        </li>
    </ul>
    <div class="pagination">
        <a href="#">&laquo;</a>
        <a href="#">1</a>
        <a class="pagination-active" href="#">2</a>
        <a href="#">3</a>
        <a href="#">4</a>
        <a href="#">5</a>
        <a href="#">6</a>
        <a href="#">&raquo;</a>
    </div>
</div>
<div class="smp-planner-add-new">
    <form method="post" action="/planner/@(Model.Date.ToString("yyyyMMdd"))/add">
    @Html.AntiForgeryToken()
    <div>Description:</div>
    <input type="text" name="description" class="smp-planner-add-new-description" />

    <div>Ingredients:</div>
    <textarea name="ingredients" class="smp-planner-add-new-ingredients" wrap="off"></textarea>

    <div>Notes:</div>
    <textarea name="notes" class="smp-planner-add-new-notes" wrap="off"></textarea>

    <p><input type="submit" value="Add" /></p>
    </form>
</div>
